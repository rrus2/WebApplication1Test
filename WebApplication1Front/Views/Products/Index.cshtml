@model IEnumerable<WebApplication1Front.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@if (Model.Count() == 0)
{
    <h2>Nothing to see here</h2>
}
else
{
    <div class="jumbotron">
        @foreach (var product in Model)
        {
            <div class="col-md-4">
                <p>@product.Name</p>
                <p>@product.Price</p>
                <p>@product.Genre</p>
                <a asp-action="Details"><img src="@product.ImagePath" alt="No image" /></a>
                <a asp-action="Details" class="btn btn-primary">View</a>
            </div>
        }
    </div>
}

