@model IEnumerable<WebApplication1Front.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <partial name="_ProductPartial" />
</p>
@if (Model.Count() == 0)
{
    <h2>Nothing to see here</h2>
}
else
{
    <div class="jumbotron text-center">
        @foreach (var product in Model)
        {
            <div class="col-md-4">
                <p>@product.Name</p>
                <p>@product.Price</p>
                <p>@product.Genre.Name</p>
                <p><a asp-action="Details"><img class="img-fluid" height="50" width="50" src="@product.ImagePath" alt="No image" /></a></p>
                <p><a asp-action="Details" class="btn btn-primary">View</a></p>
            </div>
        }
    </div>
}

