@model WebApplication1Front.ViewModels.ApplicationUserViewModel
<div>
    <!-- Register -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal1">
        Register
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form method="post" class="jumbotron text-center" asp-controller="User" asp-action="Register">
                        <div class="form-group">
                            <input class="form-control" asp-for="Email" placeholder="Email" type="text" />
                        </div>
                        <div class="form-group">
                            <input class="form-control" asp-for="Birthdate" type="date" />
                        </div>
                        <div class="form-group">
                            <input class="form-control" asp-for="Password" placeholder="Password" type="password" />
                        </div>
                        <div class="form-group">
                            <input class="form-control" asp-for="RepeatPassword" placeholder="Repeat password" type="password" />
                        </div>
                        <div class="form-group">
                            <input class="btn btn-secondary" type="submit" value="Register" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal2">
        Login
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form method="post" class="jumbotron text-center" asp-controller="User" asp-action="Login">
                        <div class="form-group">
                            <input class="form-control" asp-for="Email" placeholder="Email" type="text" />
                        </div>
                        <div class="form-group">
                            <input class="form-control" asp-for="Password" placeholder="Password" type="password" />
                        </div>
                        <div class="form-group">
                            <input class="btn btn-secondary" type="submit" value="Register" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
